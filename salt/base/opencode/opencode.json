{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "write": "ask",
    "bash": "ask"
  },
  "plugin": [
    "opencode-plugin-llama.cpp@latest"
  ],
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama.cpp (local)",
      "options": {
        "baseURL": "{{ pillar.opencode.base_url }}",
        "apiKey": "{{ pillar.opencode.api_key }}"  
      },
      "models": {
        "llama-cpp/Qwen3-Coder-Next-Q6_K_XL": {
          "name": "Qwen3 Coder Next Q6 K XL",
          "limit": {
            "context": 262144,
            "output": 65536
          }
        },
        "llama-cpp/MiniMax-M2.5-IQ2_M": {
          "name": "MiniMax M2.5 IQ2 M",
          "limit": {
            "context": 1048576,
            "output": 65536
          }
        },
        "llama-cpp/Qwen3.5-122B-A10B-Q4_K_XL": {
          "name": "Qwen3.5 122B A10B Q4 K XL",
          "limit": {
            "context": 262144,
            "output": 65536
          }
        },
        "llama-cpp/Qwen3.5-35B-A3B-Q8_K_XL": {
          "name": "Qwen3.5 35B A3B Q8 K XL",
          "limit": {
            "context": 262144,
            "output": 65536
          }
        }
      }
    }
  },
  "mcp": {
    {% if pillar['opencode']['mcp']['brave_search']['enabled'] %}
    "brave-search": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "environment": {
        "BRAVE_API_KEY": "{{ pillar.opencode.mcp.brave_search.api_key }}"
      }
    }
    {% endif %}
  }
}
